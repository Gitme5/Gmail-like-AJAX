<div class="col-md-12 text-center">
	<h1 style = "text-align: center;">THP Gmail</h1>
	<%= button_to "Receive email", emails_path, method: 'post', class: "btn btn-success", remote: true%>

</div>

<br><br>

<div class ="container row">
	<div class = "col-5">
		<table class="table">
			<thead class = "thead-light">
			    <tr>
			    	<th scope="col">#</th>
			      	<th scope="col">Liste des emails</th>
			    </tr>
			</thead>
			<tbody id = "email-list">
			  	<% @emails.each do |email| %>
			    <tr class="<%= email.id %>">
			      	<td scope="row"><%= email.id %></th>
			      	<td scope="row"><%= link_to email.object, email_path(email), method: 'get', remote: true %></td> 	
			    </tr>
			   	<% end %>
			</tbody>
		</table>
	</div>


	<div class = "col-7">
		<table class="table">
			<thead class = "thead-light">
			    <tr>
			      	<th scope="col">Email sélectionné <span id = "count"></span></th>
			    </tr>
			</thead>
			<tbody>
			    <tr >
			      	<td scope="row" id="email-view"></td> 	
			    </tr>
			</tbody>
		</table>
	</div>

</div>

